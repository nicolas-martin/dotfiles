#!/bin/bash

GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m' # No Color
red() {
	echo -e "${RED}$@${NC}"
}
blue() {
	echo -e "${BLUE}$@${NC}"
}
green() {
	echo -e "${GREEN}$@${NC}"
}

CONFIG="$HOME/.skhdrc"

if [[ ! -f "$CONFIG" ]]; then
  echo "No skhd config found at $CONFIG"
  exit 1
fi

# Filter out comments and empty lines
CMD=$(grep -v '^\s*#' "$CONFIG" | grep -v '^\s*$' | fzf --prompt="Search & Run yabai: " --preview="echo {}" --preview-window=wrap)

# Extract the command part (after the colon)
if [[ -n "$CMD" ]]; then
	TRIM_WHITESPACE_B_A='s/^[ \t]*//;s/[ \t]*$//'
  KEY=$(echo "$CMD" | cut -d ':' -f1 | sed "$TRIM_WHITESPACE_B_A")
  COMMAND=$(echo "$CMD" | cut -d ':' -f2 | sed "$TRIM_WHITESPACE_B_A")
  green "$KEY"
	blue "$COMMAND"
	ERROR_OUTPUT=$(eval "$COMMAND" 2>&1)
	EXIT_CODE=$?
	if [[ $EXIT_CODE -ne 0 ]]; then
		red $ERROR_OUTPUT
	fi
fi

