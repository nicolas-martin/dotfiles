##################################
# Rectangle-style Snap Positions #
##################################

# Left / Right Half
alt - left  : yabai -m window --toggle float; yabai -m window --grid 1:2:0:0:1:1
alt - right : yabai -m window --toggle float; yabai -m window --grid 1:2:1:0:1:1

# Top / Bottom Half
alt - up    : yabai -m window --toggle float; yabai -m window --grid 2:1:0:0:1:1
alt - down  : yabai -m window --toggle float; yabai -m window --grid 2:1:0:1:1:1

# Fullscreen (not native)
alt - return : yabai -m window --toggle float; yabai -m window --grid 1:1:0:0:1:1

# Thirds (Left / Center / Right)
alt - 1 : yabai -m window --toggle float; yabai -m window --grid 1:3:0:0:1:1
alt - 2 : yabai -m window --toggle float; yabai -m window --grid 1:3:1:0:1:1
alt - 3 : yabai -m window --toggle float; yabai -m window --grid 1:3:2:0:1:1

# Corners
alt - u : yabai -m window --toggle float; yabai -m window --grid 2:2:0:0:1:1  # Top-left
alt - i : yabai -m window --toggle float; yabai -m window --grid 2:2:1:0:1:1  # Top-right
alt - j : yabai -m window --toggle float; yabai -m window --grid 2:2:0:1:1:1  # Bottom-left
alt - k : yabai -m window --toggle float; yabai -m window --grid 2:2:1:1:1:1  # Bottom-right

# Center window
alt - c : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

##################################
# Move to display and snap       #
##################################

# Next display + snap left
alt + ctrl - right : yabai -m window --display next; yabai -m window --toggle float; yabai -m window --grid 1:2:0:0:1:1

# Prev display + snap right
alt + ctrl - left : yabai -m window --display prev; yabai -m window --toggle float; yabai -m window --grid 1:2:1:0:1:1

# Next display + fullscreen
alt + ctrl - return : yabai -m window --display next; yabai -m window --toggle float; yabai -m window --grid 1:1:0:0:1:1

# Next display + center
alt + ctrl - c : yabai -m window --display next; yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

##################################
# Tiling Navigation & Movement   #
##################################

# Focus window (Yabai tiling)
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north

# Swap window
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north

# Warp (move) window
shift + cmd - h : yabai -m window --warp west
shift + cmd - l : yabai -m window --warp east
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north

##################################
# Space + Display Navigation     #
##################################

# Focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Move window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9

# Focus display
ctrl + shift - h : yabai -m display --focus west
ctrl + shift - l : yabai -m display --focus east

##################################
# Other utilities                #
##################################

# Toggle float + center
alt - t : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# Toggle fullscreen (not native)
alt - f : yabai -m window --focus mouse && yabai -m window --toggle zoom-fullscreen

# Native macOS fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# Minimize
alt - m : yabai -m window --minimize

# Destroy focused space
alt - q : yabai -m space --destroy

# Rotate/mirror/balance layout
alt - r : yabai -m space --rotate 90
alt - y : yabai -m space --mirror y-axis
shift + alt - = : yabai -m space --balance

# Adjust gaps
alt - g : yabai -m space --gap rel:10
shift + alt - g : yabai -m space --gap rel:-10

# Restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

